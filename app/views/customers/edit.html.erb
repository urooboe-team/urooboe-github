<div class="container">
  <div class="row">
    <div class="col-xs-8">
      <label>会員情報の編集</label><%= link_to "退会する", withdraw_path, class:"btn btn-danger delete" %>

          <%= form_for(@customer) do |f| %>

            <table class="table">
              <tr>
                <th>氏名</th>
                <td><%= f.text_field :last_name %><%= f.text_field :first_name %></td>
              </tr>

              <tr>
               <th>カナ</th>
               <td><%= f.text_field :kana_last_name %><%= f.text_field :kana_first_name %></td>
              </tr>

              <tr>
            	 <th>郵便番号</th>
               <td><%= f.text_field :postcode %></td>
              </tr>

              <tr>
            	 <th>住所</th>
               <td><%= f.text_field :address %></td>
              </tr>

              <tr>
            	 <th>電話番号</th>
               <td><%= f.text_field :telephone %></td>
              </tr>

              <tr>
            	 <th>メールアドレス</th>
               <td><%= f.text_field :email %></td>
              </tr>

            </table>
            <%= f.submit "編集内容を保存する", class:"btn btn-primary change" %>
          <% end %>
      </div>
    </div>
</div>