<h1>会員情報の編集</h1>

<%= form_for(@customer) do |f| %>

<table class="table table-striped">
  <tr>
   <th>氏名</th>
   <td><%= f.text_field :last_name %><%= f.text_field :first_name %></td>
  </tr>

  <tr>
   <th>カナ</th>
   <td><%= f.text_field :kana_last_name %><%= f.text_field :kana_first_name %></td>
  </tr>

  <tr>
	 <th>郵便番号</th>
   <td><%= f.text_field :postcode %></td>
  </tr>

  <tr>
	 <th>住所</th>
   <td><%= f.text_field :address %></td>
  </tr>

  <tr>
	 <th>電話番号</th>
   <td><%= f.text_field :telephone %></td>
  </tr>

  <tr>
	 <th>メールアドレス</th>
   <td><%= f.text_field :email %></td>
  </tr>

</table>



<%= f.submit "編集内容を保存する", class:"btn btn-default" %>

<%= link_to "退会する", withdraw_path, class:"btn btn-default" %>


<% end %>