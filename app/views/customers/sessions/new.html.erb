<div class="container">
  <div class="row">
        <div class="col-xs-8">
<h3>会員の方はこちらからログイン</h3>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"col-xs-4"%><br>
  </div>

  <div class="form-group">
    <%= f.label :パスワード %><br>
    <%= f.password_field :password, autocomplete: "current-password" ,class:"col-xs-4"%><br>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :ログイン情報の保存 %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン" ,class:"btn btn-primary change"%><br><br>

<%= render "customers/shared/links" %>


  </div>
<% end %>


</div>
</div>
</div>

