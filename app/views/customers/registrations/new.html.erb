<h3>会員登録画面</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :姓（全角）%><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
  </div>

  <div class="field">
    <%= f.label :名（全角）%><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "fast_name" %>
  </div>

  <div class="field">
    <%= f.label :姓（全角カナ）  %><br />
    <%= f.text_field :kana_last_name, autofocus: true, autocomplete: "kana_last_name" %>
  </div>

  <div class="field">
    <%= f.label :名（全角カナ） %><br />
    <%= f.text_field :kana_first_name, autofocus: true, autocomplete: "kana_first_name" %>
  </div>

  <div class="field">
    <%= f.label :郵便番号（7桁の半角数字、ハイフンなし） %><br />
    <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode" %>
  </div>

  <div class="field">
    <%= f.label :住所 %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :電話番号（半角数字ハイフンなし） %><br />
    <%= f.text_field :telephone, autofocus: true, autocomplete: "telephone" %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（6文字以上）%>
    <% if @minimum_password_length %>
    <em></em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
<br>
  <div class="actions">
    <%= f.submit "新規登録 & ログイン",class:"btn btn-primary next" %>
  </div>


<% end %>

<%= render "customers/shared/links" %>



