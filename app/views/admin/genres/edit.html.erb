<div class="container">
 <h2>ジャンル編集画面</h2>
 <%= form_for(@genre,url: admin_genre_path) do |f| %>
	<div class="form-inline">
	 <div class="form-group">
		 <label>ジャンル<%= f.text_field :genre_name %></label>
	 </div>
	 <div class="form-group">
		 <label>
		     <%= f.radio_button :display, 'true' %>有効
	     </label>
	     <label>
		 	 <%= f.radio_button :display, 'false' %>無効
	    </label>
	 </div>
	  <div class="form-group">
		 <label><%= f.submit '変更を保存する', class:"btn btn-primary" %></label>
     </div>
	</div>
 <% end %>
</div>
