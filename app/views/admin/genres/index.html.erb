
<div class="container">
	
	<div class="big-box">
 <h2>ジャンル追加・一覧画面</h2>
 <%= form_for :genre,url: admin_genres_path do |f| %>
	<div class="form-inline">
	 <div class="form-group">
		 <label>ジャンル<%= f.text_field :genre_name %></label>
	 </div>
	 <div class="form-group">
		 <label>
		     <%= f.radio_button :display, 'true' %>有効
	     </label>
	     <label>
		 	 <%= f.radio_button :display, 'false' %>無効
	    </label>
	 </div>
	  <div class="form-group">
		 <label><%= f.submit '追加', class:"btn btn-primary next" %></label>
     </div>
	</div>
 <% end %>
<br>
<br>
<div class="cart-box">
  <table class="table>
  		<tr class="active">
  		<th>ジャンル</th>
  		<th>状態</th>
  		<th></th>
  		</tr>

	 <tbody>
	 	<% @genres.each do |genre| %>
		 <tr>
			 <td><%= genre.genre_name %></td>
			 <% if genre.display == true %>
			 <td>有効</td>
			 <% else genre.display == false %>
			 <td>無効</td>
			 <% end %>
			 <td><%= link_to '編集する', edit_admin_genre_path(genre.id), class:"btn btn-primary next" %></td>
		 </tr>
		 <% end %>
	  </tbody>
  </table>
</div>
</div>
</div>
