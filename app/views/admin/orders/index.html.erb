<div class="container">
	<h2>注文一覧画面</h2>
	<table class="table" style="width: 90%">
		<thead>
			<tr class="active">
				<th>購入日時</th>
				<th>購入者</th>
				<th>注文個数</th>
				<th>注文ステータス</th>
			</tr>
		</thead>
		<tbody>
			<% @orders.each do |order| %>
			<tr>
				<td><%= link_to order.created_at, admin_order_path(order.id) %></td>
				<td><%= order.customer.fast_name.last_name %></td>
				<td><%= order.order_products.quantity %></td>
				<td><%= order.order_status %></td>
			</tr>
			<% end %>
		</tbody>.
	</table>
</div>
