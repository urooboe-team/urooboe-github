<h2>会員編集画面</h2>
<%= form_for(@customer,url:admin_customer_path) do |f| %>

<label>会員ID</label>
<%= @customer.id %>
<label>氏名</label>
 <%= f.text_field :last_name %> <%= f.text_field :first_name %><br>
 <label>フリガナ</label>
 <%= f.text_field :kana_last_name %> <%= f.text_field :kana_first_name %><br>
 <label><郵便番号</label>
 <%= f.text_field :postcode %><br>
 <label>住所</label>
 <%= f.text_field :address %><br>
 <label>電話番号</label>
 <%= f.text_field :telephone %><br>
 <label>メールアドレス</label>
 <%= f.text_field :email %><br>
<label>会員ステータス</label>
 <label>
 <%= f.radio_button :member_status, true %>有効
</label>
<label>
<%= f.radio_button :member_status, false %>退会済み
</label>
<%= f.submit '変更を保存する' %>
<% end %>