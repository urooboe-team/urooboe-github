<h2>会員編集画面</h2>
<div class="col-xs-5">
<%= form_for(@customer,url:admin_customer_path) do |f| %>

<table  class="table" >
 <thead>
 	<div class="line">
 	<tr style="border:none;">
		<th style="border:none;">会員ID</th>
		<td style="border:none;"><%= @customer.id %></td>
	</tr>
	<tr>
		<th style="border:none;">氏名</th>
		<td style="border:none;"> <%= f.text_field :last_name %> <%= f.text_field :first_name %></td>
	</tr>
	<tr>
		 <th style="border:none;">フリガナ</th>
		<td style="border:none;"> <%= f.text_field :kana_last_name %> <%= f.text_field :kana_first_name %></td>
	</tr>
	<tr>
		 <th style="border:none;">郵便番号</th>
		<td style="border:none;"> <%= f.text_field :postcode %></td>
	</tr>
	<tr>
		 <th style="border:none;">住所</th>
		 <td style="border:none;"><%= f.text_field :address %></td>
	</tr>
	<tr>
		 <th style="border:none;">電話番号</th>
		<td style="border:none;"> <%= f.text_field :telephone %></td>
		</tr>
		<tr>
		 <th style="border:none;">メールアドレス</th>
		<td style="border:none;"> <%= f.text_field :email %></td>
		</tr>
		<tr>
		<th style="border:none;">会員ステータス</th>
		<td style="border:none;"> <%= f.radio_button :member_status, true %>有効
		<%= f.radio_button :member_status, false %>退会済み</td>
	</tr>
<tr>
<td style="border:none;"><%= f.submit '変更を保存する', class:"btn btn-primary" %></td>
</tr>
	</thead>
</div>
</table>
<% end %>
</div>