<h1>会員一覧画面</h1>

  <table>
     <tr>
     	<th>会員ID</th>
  	    <th>氏名</th>
  	    <th>メールアドレス</th>
  	    <th>会員ステータス</th>
     </tr>

     <% @customers.each  do |customer| %>

     <tr>
     	<th><%= customer.id %></th>
      <th><%= full_name(@customer)  %>
      <th><%= link_to customer.last_name + customer.first_name, admin_customer_path(customer.id) %></th>

     	<th><%= customer.email %></th>
     	<th><%= customer.member_status %></th>
     </tr>

     <% end %>
  </table>