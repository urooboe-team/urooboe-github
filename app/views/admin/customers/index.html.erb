
<div class="container">
<h1>会員一覧画面</h1>

  <table class="table table-striped" style="width: 70%">
     <tr>
     	<th>会員ID</th>
  	    <th>氏名</th>
  	    <th>メールアドレス</th>
  	    <th>会員ステータス</th>
     </tr>

     <% @customers.each  do |customer| %>

     <tr>
     	<th><%= customer.id %></th>
      <th><%= link_to customer.last_name + customer.first_name, admin_customer_path(customer.id) %></th>

     	<th><%= customer.email %></th>
      <% if customer.member_status == true %>
     	<th>有効</th>
      <% else %>
      <th>退会済み</th>
      <% end %>
     </tr>

     <% end %>
  </table>

  </div>