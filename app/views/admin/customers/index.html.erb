<h1>会員一覧画面</h1>

  <table>
     <tr>
     	<th>会員ID</th>
  	    <th>氏名</th>
  	    <th>メールアドレス</th>
  	    <th>会員ステータス</th>
     </tr>

     <% @customers.each  do |customer| %>

     <tr>
     	<th><%= customer.id %></th>
     	<th><%= customer.last_name %> <%= customer.first_name %></th>
     	<th><%= customer.email %></th>
     	<th><%= customer.member_status %></th>
     </tr>

     <% end %>
  </table>