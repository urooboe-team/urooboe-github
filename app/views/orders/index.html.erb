
<div class="container">
	<h2>注文一覧画面</h2>
	<table class="table" style="width: 90%">
			<tr class="active">
				<th>注文日</th>
				<th>配送先</th>
				<th>注文商品</th>
				<th>支払金額</th>
				<th>注文ステータス</th>
				<th>注文詳細</th>
			</tr>
		<tbody>
			<% @orders.each do |order| %>
			<tr>
				<td><%= link_to order.created_at, order_path(order.id) %></td>
				<td><%= order.postcode %><%= order.address %><%= order.ship_name %></td>
					<td>
						<% order.order_products.each do |order_product| %>
						<%= order_product.product.product_name %>
						<% end %>
					</td>
					<td><%= order.total_fee %></td>
				<td><%= order.order_status %></td>
				<td><%= link_to '表示する', order_path(order.id) %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
