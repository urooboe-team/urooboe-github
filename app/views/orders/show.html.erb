<div class="container">
	<div class="row">
		<h2>注文履歴詳細</h2>
		<div class="col-xs-6">
	<h4>注文情報</h4>
	<table class="table">
		<tbody>

			<tr>
				<td class="title">注文日</td>
				<td><%= link_to @order.created_at, order_path(@order.id) %></td>
			</tr>
			<tr>
				<td class="title">配送先</td>
				<td><%= @order.postcode %><%=@order.address %><%= @order.ship_name %></td>
			</tr>
			<tr>
				<td class="title">ステータス</td>
				<td><%= @order.order_status %></td>
			</tr>
			<tr>
				<td class="title">支払い方法</td>
				<td><%= @order.payment %></td>
			</tr>
		</tbody>
	</table>
	</div>

	<div class="col-xs-6">

		    <h4>注文内容</h4>
			 <table class="table">
				<tr>
					<th>商品</th>
					<th>単価</th>
					<th>個数</th>
					<th>小計</th>
				</tr>


		 <tbody>
		 	<% @order.order_products.each do |order_product| %>
			<tr>
				<td><%= order_product.product.product_name %></td>
				<td><%= order_product.unit_price %></td>
				<td><%= order_product.quantity %></td>
				<td><%= order_product.unit_price * order_product.quantity %></td>
			</tr>
           <% end %>
		 </tbody>
	  </table>
	</div>
	</div>
	<div class="row">
	<div class="col-xs-3">
	<h4>請求情報</h4>
	  <table class="table">
		  <tbody>

			 <% sum = 0 %>
			 <% sum += @order_product.add_tax * @order_product.quantity %>

			 <tr>

				<td class="title">商品合計</td>
				<td ><%= sum %>円</td>
			</tr>
			<tr>
				<td class="title">配送料</td>
				<td><%= @order.freight %>円</td>
			</tr>
			<tr>
				<td class="title">ご請求額</td>

				<td><%= @order.total_fee %>円</td>
			 </tr>


		  </tbody>
	  </table>
    </div>
	</div>
</div>