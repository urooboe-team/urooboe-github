<h1>注文情報確認</h1>

<table class="table table-striped">
   <tr>
   <th>商品名</th>
   <th>単価（税込）</th>
   <th>数量</th>
   <th>小計</th>
   </tr>


 <% @carts.each do |cart| %>

    <th>商品名</th>
    <th>単価（税込）<%= cart.product.unit_price %></th>
    <th>数量 <%= cart.quantity %></th>
    <th>小計</th>

    <% end %>

   </tr>

   <tr>
   <th>送料　</th>
   <th>合計　</th>
   <th>合計金額　</th>

   </tr>

</table>

<table class="table table-striped">
  <tr>
  <th>支払い方法</th>
  <th>お届け先</th>
  </tr>

  <tr>
  <th><%= @order.payment %></th>
  <th>

         <%= @order.postcode %>
         <%= @order.address %>
         <%= @order.ship_name %>

  </th>
  </tr>

</table>



 <%= form_for(@order) do |f| %>

  <%= f.hidden_field :payment, value: @order.payment  %>
  <%= f.hidden_field :address, value: @order.address %>

  <%= f.submit '購入する' %>

 <% end %>








