<div class="container">
	<div class="row">
		<div class="col-md-3">

			<h2 class="line">ジャンル検索</h2>
			<div class="genre">
			<% @products.each do | product | %>
			 <% if product.genre.display == true %>
			<p>
			<%= link_to product.genre.genre_name,products_path(genre_name: product.genre.genre_name) %>
			</p>
			<% end %>
			<%end%>
		</div>
	</div>

		<div class="col-md-9">
			<div>
			  <% @products.each do |product| %>

			   <% if product.genre.display == true %>
			   <div class="cake">

			  <%= link_to(product_path(product), class: 'list-content') do %>
			 	 <%= attachment_image_tag product,:product_image,:fill,100,100,format:'jpeg' %>
			  	<p>
			     <%= product.product_name %><br>
			     <%= product.add_tax  %>
			     <% end %>
			 	</p>
			 </div>
			     <% end %>
			  <% end %>
			</div>
		</div>
	</div>
</div>