<!DOCTYPE html>
<html>
  <head>
    <title>UrooboeGithub</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/9f7238856e.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-warning">
        <div class="container">
      <div>
       <%= image_tag  "cake.png" ,class:"logo" %>
      </div>
  <nav>
        <ul class="nav navbar-nav navbar-right">

          <% if customer_signed_in? %>

           <li class="nav-list-item">
              <%= link_to "Top(商品一覧)", products_path %></li>

           <li class="nav-list-item">
              <%= link_to "詳細ページ(aboutページ)", homes_about_path %></li>

           <li class="nav-list-item">
              <%= link_to "カート", cart_items_path %></li>

           <li class="nav-list-item">
              <%= link_to "ログイン", new_customer_session_path %></li>

           <li class="nav-list-item">
              <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %></li>

           <li class="nav-list-item">
              <%= link_to "マイページ", customer_path %></li>

          <% elsif admin_signed_in? %>

           <li class="nav-list-item">
              <%= link_to "Top(商品一覧)", admin_products_path %></li>

           <li class="nav-list-item">
              <%= link_to "会員一覧", top_path %></li>

           <li class="nav-list-item">
              <%= link_to "ジャンル一覧", cart_items_path %></li>

           <li class="nav-list-item">
              <%= link_to "注文履歴一覧", admin_orders_path %></li>

          <li class="nav-list-item">
              <%= link_to "ログイン", new_admin_session_path %></li>

           <li class="nav-list-item">
              <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %></li>

          <% else %>
           <li class="nav-list-item">
              <%= link_to "Top(商品一覧)", products_path %></li>

           <li class="nav-list-item">
              <%= link_to "詳細ページ(aboutページ)", homes_about_path %></li>

           <li class="nav-list-item">
              <%= link_to "ログイン", new_customer_session_path %></li>

            </ul>
          </nav>
             </div>

</nav>
         <% end %>

    </header>

    <%= yield %>

  </body>
</html>


